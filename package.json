{
  "author": "Sandeep Mistry",
  "maintainers": [
    "Jacob Rosenthal",
    "Luis Montes"
  ],
  "license": "MIT",
  "name": "@trainerroad/noble",
  "description": "A Node.js BLE (Bluetooth Low Energy) central library.",
  "version": "1.9.2-22",
  "repository": {
    "type": "git",
    "url": "https://github.com/trainerroad/noble.git"
  },
  "bugs": {
    "url": "https://github.com/trainerroad/noble/issues"
  },
  "keywords": [
    "bluetooth",
    "BLE",
    "bluetooth low energy",
    "bluetooth smart",
    "central"
  ],
  "main": "./index.js",
  "types": "./index.d.ts",
  "gypfile": true,
  "engines": {
    "node": ">=6"
  },
  "os": [
    "darwin",
    "linux",
    "freebsd",
    "win32"
  ],
  "dependencies": {
    "bindings": "^1.5.0",
    "debug": "^4.3.4",
    "napi-thread-safe-callback": "^0.0.6",
    "node-addon-api": "^4.3.0"
  },
  "optionalDependencies": {
    "@trainerroad/bluetooth-hci-socket": "git+https://git@github.com/trainerroad/node-bluetooth-hci-socket.git#v0.5.3-10"
  },
  "devDependencies": {
    "@mapbox/node-pre-gyp": "^1.0.10",
    "async": "^3.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.31.0",
    "eslint-config-semistandard": "^17.0.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "each-series-async": "1.0.1",
    "mocha": "^10.2.0",
    "node-abi": "3.33.0",
    "node-gyp": "^9.3.1",
    "nyc": "^15.1.0",
    "prettier": "^2.8.1",
    "proxyquire": "^2.1.3",
    "should": "~13.2.3",
    "sinon": "^15.0.1",
    "tar-stream": "^2.1.0",
    "ws": "^8.11.0"
  },
  "updateName": "test",
  "scripts": {
    "install": "node-pre-gyp install",
    "lint": "eslint \"**/*.js\"",
    "gen-prebuilds": "node ./generate-prebuilds.mjs",
    "lint-fix": "eslint \"**/*.js\" --fix",
    "pretest": "npm run rebuild",
    "rebuild": "node-gyp rebuild",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov > .nyc_output/lcov.info",
    "test": "cross-env NODE_ENV=test mocha --recursive \"test/*.test.js\" \"test/**/*.test.js\" --exit"
  },
  "browser": {
    "./lib/resolve-bindings.js": "./lib/resolve-bindings-web.js"
  },
  "binary": {
    "module_name": "noble",
    "module_path": "./build/Release/",
    "host": "https://github.com/trainerroad/noble/releases/download/",
    "remote_path": "v{version}"
  }
}
